<UserControl x:Class="TheaterNyreack.UserControls.ActorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheaterNyreack.UserControls"
             mc:Ignorable="d" 
               d:DesignHeight="150" d:DesignWidth="700" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label FontSize="15" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="5" x:Name="nameLabel"></Label>
        <Label Grid.Column="1" FontSize="15" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="5" x:Name="surnameDescriptionLabel"></Label>
        <Label Grid.Column="2" FontSize="15" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="5" x:Name="patronomycBudgetLabel"></Label>
    </Grid>
</UserControl>
